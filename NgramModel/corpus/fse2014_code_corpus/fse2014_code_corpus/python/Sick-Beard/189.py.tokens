class EventHandler ( object ) : def __init__ ( self ) : self . handlers = { } def connect ( self , event_name , handler ) : try : self . handlers [ event_name ] . append ( handler ) except KeyError : self . handlers [ event_name ] = [ handler ] def raiseEvent ( self , event_name , * args ) : if event_name not in self . handlers : return for handler in self . handlers [ event_name ] : handler ( * args )
